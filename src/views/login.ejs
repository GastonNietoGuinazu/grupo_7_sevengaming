<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/6d7ddf6bb9.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/cuenta.css">
    <link rel="stylesheet" href="/css/carrito-login.css">
    <link rel="stylesheet" href="/css/validationFront.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <title>Seven Gaming</title>
</head>

<body>
    <!-- Header -->
    <%- include('partials/header') %>
        <main>
            <section>
                <div class="titulo-2">
                    <h1>INICIAR SESIÓN</h1>
                </div>
                <div class="contenedor-login">
                    <form class="form-completo" action="/usuarios/login" method="post">

                        <article class="login">
                            <p id="pEmail">Email</p>
                            <div class="email">
                                <input type="email" name="email" id="email"
                                value="<%= locals.old && old.email ? old.email : "" %>">
                                <% if (locals.errors && errors.email) { %>
                                    <div class="invalid-text">
                                        <%= errors.email.msg %>
                                    </div>
                                <% } %>
                            </div>
                        </article>

                        <article class="login">
                            <p id="pPassword">Contraseña</p>
                            <div>
                                <input type="password" name="password" id="password">
                                <% if (locals.errors && errors.password) { %>
                                    <div class="invalid-text">
                                        <%= errors.password.msg %>
                                    </div>
                                <% } %>
                            </div>
                        </article>

                        <div class="repo-contraseña">
                            <p>¿Olvidaste tú contraseña?</p>
                        </div>
                        <article class="iniciar-sesion">
                            <div>
                                <button type="submit">Iniciar Sesión</button>
                            </div>
                        </article>
                        <article class="login-3">
                            <p>¿No tienes cuenta?</p>
                            <div class="crear-cuenta">
                                <a href="/usuarios/registrarse">Crear Cuenta</a>
                            </div>
                        </article>
                    </form>
                    <ul class="errores">
                    </ul>
                </div>
            </section>
        </main>
        <!-- <script src="/js/login.js"></script> -->
    <!-- Footer -->
    <%- include('partials/footer') %>
</body>

</html>