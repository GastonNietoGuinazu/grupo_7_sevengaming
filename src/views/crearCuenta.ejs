        <div class="container-gral">
            <div class="form-container-gral">
                <form class="form-container" action="/usuarios/cuenta" method="post">
                    <div class="name-container">
                        <label class="label-name" for="nombre">Nombre</label>
                        <input class="input-name" type="text" name="nombre" id="" placeholder="Nombre">
                        <% if (locals.errors && erros.nombre) { %>
                            <div class="invalid-text">
                                <%= errors.nombre.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="name-container">
                        <label class="label-name" for="apellido">Apellido</label>
                        <input class="input-name" type="text" name="apellido" id="" placeholder="Apellido">
                        <% if (locals.errors && erros.apellido) { %>
                            <div class="invalid-text">
                                <%= errors.apellido.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="name-container">
                        <label class="label-name" for="nombre">Número de teléfono (Opcional)</label>
                        <input class="input-name" type="text" name="nombre" id="" placeholder="Teléfono">
                    </div>
                    <div class="name-container">
                        <label class="label-name" for="email">Email</label>
                        <input class="input-name" type="email" name="email" id="" placeholder="Email">
                        <% if (locals.errors && erros.email) { %>
                            <div class="invalid-text">
                                <%= errors.email.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="name-container">
                        <label class="label-name" for="contraseña">Contraseña</label>
                        <input class="input-name" type="password" name="contraseña" id="" placeholder="Contraseña">
                        <% if (locals.errors && erros.contraseña) { %>
                            <div class="invalid-text">
                                <%= errors.contraseña.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="name-container">
                        <label class="label-name" for="contraseña2">Confirmar contraseña</label>
                        <input class="input-name" type="password" name="contraseña2" id=""
                            placeholder="Confirmar contraseña">
                        <% if (locals.errors && erros.contraseña2) { %>
                            <div class="invalid-text">
                                <%= errors.contraseña2.msg %>
                            </div>
                            <% } %>
                    </div>
                </form>
                <form class="form-humano" action="" method="post">
                    <input class="checkbox" type="checkbox"><label class="texto-robot" for="">No soy un
