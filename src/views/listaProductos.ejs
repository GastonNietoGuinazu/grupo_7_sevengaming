  <link rel="stylesheet" href="/css/producto.css" />
  <link rel="stylesheet" href="/css/home.css" />
  <link rel="stylesheet" href="/css/cuenta.css" />
  <link rel="stylesheet" href="/css/listaProductos.css" />
  <title>Listado de productos</title>
</head>

<%- include('partials/header') %>

  <body class="body-productos">
    <!-- <div class="cards"> -->
    <div class="container-prueba">
      <h1 class="listado-productos">LISTADO DE PRODUCTOS</h1>
      <div class="cards-container">
        <ul class="items-container">
          <% for( let i=0; i < products.length; i++ ) { %>
            <li class="items">
              <a class="item-text" href="/productos/detail/<%= products[i].id %>">
                <%= products[i].name %>
              </a>
            </li>
            <% } %>
        </ul>
      </div>
    </div>
    <!-- </div> -->
  </body>
  <%- include('partials/footer') %>

</html>