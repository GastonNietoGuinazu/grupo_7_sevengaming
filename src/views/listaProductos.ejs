  <body>
    <h1>LISTADO DE PRODUCTOS</h1>
    <ul>
      <% for( let i = 0; i < products.length; i++ ) { %>
      <li>
        <a href="/productos/detail/<%= products[i].id %>"
          ><%= products[i].name %></a
        >
      </li>
      <% } %>
    </ul>
  </body>
